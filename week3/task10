import java.util.*;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();

        int result = 0;

        for (int i = 1; i <= n; i++) {
            if (i % 2 == 1) {
                result += i;
            } else {
                result -= i;
            }
        }

        System.out.println(result);
    }
}
